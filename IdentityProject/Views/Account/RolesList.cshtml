@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "RolesList";
}

<h1>Roles List</h1>

<a asp-action="CreateRole" asp-controller="Account" class="btn btn-primary">Create Role</a>

@foreach (var item in Model)
{

    <div class="Card">
        <div class="card-header">
            Role Number : @item.Id
        </div>
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
        </div>
        <div class="card-footer">

            <a asp-action="EditRole" asp-controller="Account" asp-route-id="@item.Id" class="btn btn-secondary">Edit Role</a>
            <a asp-action="DeleteRole" asp-controller="Account" asp-route-id="@item.Id" class="btn btn-danger">Delete Role</a>
        </div>

    </div>

}       